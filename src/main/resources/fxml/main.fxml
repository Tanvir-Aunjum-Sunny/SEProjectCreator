<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<GridPane alignment="center" hgap="10" prefHeight="500" prefWidth="400" vgap="15"
          xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.shc.sepcreator.MainController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <ImageView GridPane.rowIndex="0" GridPane.columnSpan="3" GridPane.halignment="CENTER">
        <Image url="/images/logo.png" requestedWidth="400" preserveRatio="true" smooth="true"/>
    </ImageView>

    <Text GridPane.halignment="CENTER" text="New Project" GridPane.columnIndex="0" GridPane.columnSpan="3"
          GridPane.rowIndex="1" id="title"/>

    <Label text="Package Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField text="com.me.mygame" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3"
               fx:id="pkgName"/>

    <Label text="Game Class Name:" GridPane.rowIndex="4"/>
    <TextField text="MyGame" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" fx:id="clsName"/>

    <Label text="Project Directory:" GridPane.rowIndex="5"/>
    <TextField text="None Selected" GridPane.columnIndex="1" GridPane.rowIndex="5" id="pDir" fx:id="pDir" prefWidth="250"/>
    <Button GridPane.halignment="RIGHT" text="..." GridPane.columnIndex="2" GridPane.rowIndex="5"
            onAction="#browseDirSelected"/>

    <Button GridPane.halignment="CENTER" GridPane.columnSpan="3" GridPane.rowIndex="7" text="Generate Project"
            onAction="#generateProjectClicked" id="generate" fx:id="generateBtn"/>
    <ProgressBar GridPane.halignment="CENTER" GridPane.columnSpan="3" GridPane.rowIndex="8"
                 prefWidth="Infinity" progress="0"
                 fx:id="progressBar"/>
    <Label text="" GridPane.halignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="3"
           GridPane.rowIndex="9" styleClass="success" fx:id="messageStr"/>

    <stylesheets>
        <URL value="@Application.css"/>
    </stylesheets>
</GridPane>
